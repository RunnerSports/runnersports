<h3><%= link_to "新增商品", new_product_path %></h3>
<table>
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>商品簡介</td>
      <td>商品單價</td>
      <td>商品數量</td>
    </tr>
  </thead>
  <% @products.each do |product| %>
    <tbody>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.inventory %></td>
        <td><%= link_to "編輯", edit_product_path(product.id) %> </td>
        <td><%= link_to "刪除", product_path(product), method: "DELETE" %></td>
      </tr>
    </tbody>
  <% end %>

</table>
