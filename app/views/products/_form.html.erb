<% if product.errors.any? %>
  <ul>
  <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
<%= form_with model: product, local: true do |f| %>
  <div>
    <%= f.label :title, "商品名稱" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description, "商品介紹" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price, "商品單價" %>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.label :for_sale, "是否現在上架" %>
    <%= f.radio_button :for_sale, true %>
    <%= f.label :for_sale, "上架" %>
    <%= f.radio_button :for_sale, false %>
    <%= f.label :for_sale, "先不要" %>
  </div>
  <div>
    <%= f.label :inventory, "商品總數" %>
    <%= f.number_field :inventory %>
  </div>
  <div>
    <%= f.submit "確定" %>
  </div>
<% end %>